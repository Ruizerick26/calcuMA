            app:layout_row="3" />

        <Button
            android:id="@+id/button13"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="0px"
            android:onClick="optrigo"
            android:padding="0px"
            android:text="tag"
            android:textSize="50px"
            app:layout_column="4"
            app:layout_row="4" />

        <Button
