            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="0px"
            android:onClick="cambiarOperador"
            android:padding="0px"
            android:text="รท"
            android:textSize="50px"
            app:layout_column="4"
            app:layout_row="2" />

        <Button
            android:id="@+id/button10"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="0px"
            android:onClick="cambiarOperador"
            android:padding="0px"
            android:text="x"
            android:textSize="50px"
